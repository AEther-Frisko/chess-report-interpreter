{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chess_report_interpreter/main.py",
            "args": [ "--tms", "data/swiss_data.tms.sample" ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": ".:${workspaceFolder}/src:${workspaceFolder}/src/chess_report_interpreter"
            }
        },
        {
            "name": "Python Debugger: Generate Report",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chess_report_interpreter/generate_report.py",
            "args": [ "--tms", "data/swiss_data.tms.sample", "--ctr", "data/swiss_data.ctr.sample" ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": ".:${workspaceFolder}/src:${workspaceFolder}/src/chess_report_interpreter"
            }
        }
    ]
}